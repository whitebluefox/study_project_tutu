<%= form_for(@ticket) do |f| %>
  <%= render 'common/errors', resource: @ticket %>

  <div class="field">
    <%= f.label :number, "ФИО пассажира" %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :start_railway_station, "Начальная станция" %>
    <%= f.collection_select :start_railway_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :finish_railway_station, "Конечная станция" %>
    <%= f.collection_select :finish_railway_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="actions">
    <%= f.submit "#{@ticket.new_record? ? 'Создать' : 'Редактировать'}" %>
  </div>
<% end %>
